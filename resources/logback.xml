<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="false">
	<property name="LOG_HOME" value="./logs" /><!-- 上线阶段修改 -->
	<!-- 日志输出到控制台-->
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{15} - %msg%n</pattern>
		</layout>
	</appender>
	<!-- 日志输出到文件 -->
	<appender name="txtLog"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_HOME}/mall.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/mall%d{yyyyMMdd}.%i.log</fileNamePattern>
			<maxHistory>30</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>2MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{15} - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>
	<!-- 根Logger -->
	<root level="debug">
		<appender-ref ref="stdout" />
		<appender-ref ref="txtLog" />
	</root>
</configuration>   
 